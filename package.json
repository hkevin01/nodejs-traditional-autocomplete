{
    "name": "nodejs-traditional-autocomplete",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "description": "Full-stack JavaScript development with traditional autocomplete (no AI/Copilot)",
    "packageManager": "pnpm@9.15.0",
    "engines": {
        "node": ">=22.0.0",
        "pnpm": ">=9.0.0"
    },
    "scripts": {
        "dev": "turbo dev",
        "build": "turbo build",
        "start": "turbo start",
        "lint": "turbo lint",
        "lint:fix": "turbo lint:fix",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "type-check": "turbo type-check",
        "test": "turbo test",
        "test:unit": "vitest run",
        "test:e2e": "playwright test",
        "test:coverage": "vitest run --coverage",
        "clean": "turbo clean && rm -rf node_modules",
        "prepare": "husky",
        "db:generate": "pnpm --filter api prisma generate",
        "db:push": "pnpm --filter api prisma db push",
        "db:studio": "pnpm --filter api prisma studio",
        "jupyter:setup": "cd interviewing && ./scripts/setup_jupyter_demo.sh",
        "jupyter:start": "cd interviewing && ./scripts/start_jupyter_demo.sh",
        "demo:setup": "pnpm jupyter:setup",
        "demo:start": "pnpm jupyter:start",
        "demo:nodejs": "cd interviewing/demos && node hello-world-nodejs.mjs",
        "demo:react": "cd interviewing/demos && echo 'ðŸ“‹ React demo - see hello-world-react.jsx for component code'",
        "demo:run": "cd interviewing/demos && ./run-demos.sh",
        "demo:interactive": "cd interviewing/demos && ./run-demos.sh --interactive",
        "demo:all": "cd interviewing/demos && ./run-demos.sh all",
        "interview:ready": "pnpm jupyter:setup && echo 'ðŸŽ¯ Interview environment ready! Run: pnpm demo:start'"
    },
    "devDependencies": {
        "@playwright/test": "^1.49.0",
        "@types/node": "^22.10.0",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.18.0",
        "@typescript-eslint/parser": "^8.18.0",
        "@vitest/coverage-v8": "^2.1.0",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsx-a11y": "^6.10.0",
        "eslint-plugin-react": "^7.37.0",
        "eslint-plugin-react-hooks": "^5.1.0",
        "husky": "^9.1.0",
        "lint-staged": "^15.2.0",
        "prettier": "^3.4.0",
        "prettier-plugin-tailwindcss": "^0.6.0",
        "supertest": "^7.2.2",
        "tsx": "^4.19.0",
        "turbo": "^2.3.0",
        "typescript": "^5.7.0",
        "typescript-eslint": "^8.53.0",
        "vitest": "^2.1.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    }
}